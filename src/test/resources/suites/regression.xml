<suite name="UI Regression Testing" verbose="1" parallel="methods" thread-count="4">
    <parameter name="browser" value="chrome" />
    <test name="Login">
        <classes>
            <class name="tests.LoginTest" />
        </classes>
    </test>
    <test name="Shopping Cart">
        <classes>
            <class name="tests.ShoppingCartTest" />
        </classes>
    </test>
    <test name="Checkout">
        <classes>
            <class name="tests.CheckoutTest" />
        </classes>
    </test>
</suite>
